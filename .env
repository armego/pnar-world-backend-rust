# Application settings
APP_HOST=127.0.0.1
APP_PORT=8000
APP_BASE_URL=http://localhost:8000
APP_CORS_ORIGINS=["*"]

# Database settings
DB_USER=postgres
DB_PASSWORD=root
DB_PORT=5432
DB_HOST=127.0.0.1
DB_NAME=pnar_world
DB_SSL=false
DB_MAX_CONNECTIONS=10

# JWT settings
JWT_SECRET=your-secret-key-here-change-me-in-production
JWT_EXPIRES_IN=60
JWT_REFRESH_EXPIRES_IN=7
JWT_COOKIE_NAME=auth_token
JWT_COOKIE_DOMAIN=
JWT_COOKIE_SECURE=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# PgAdmin settings
PGADMIN_DEFAULT_EMAIL=admin@pnar.online
PGADMIN_DEFAULT_PASSWORD=root

# These are used by the containers directly
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_DB=pnar_world